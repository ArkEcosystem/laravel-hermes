{
    "name": "arkecosystem/hermes",
    "description": "Notifications and accompanying UI for Laravel.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Brian Faust",
            "email": "hello@basecode.sh"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/support": "^8.48",
        "livewire/livewire": "^2.5",
        "arkecosystem/ui": "^3.16",
        "arkecosystem/fortify": "^4.5"        
    },
    "autoload": {
        "psr-4": {
            "ARKEcosystem\\Hermes\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "ARKEcosystem\\Hermes\\HermesServiceProvider"
            ]
        }
    },
    "scripts": {
        "format": [
            "vendor/bin/php-cs-fixer fix"
        ],
        "test": [
            "./vendor/bin/pest --coverage --min=100 --coverage-html=.coverage --coverage-clover=coverage.xml"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "graham-campbell/analyzer": "^3.0",
        "mockery/mockery": "^1.4",
        "nunomaduro/larastan": "^0.7.6",
        "nunomaduro/laravel-mojito": "^0.2.8",
        "pestphp/pest": "^1.7",
        "pestphp/pest-plugin-faker": "^1.0",
        "pestphp/pest-plugin-laravel": "^1.0",
        "pestphp/pest-plugin-livewire": "^1.0",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-laravel": "^1.4",
        "rector/rector": "^0.11.20",
        "teamtnt/laravel-scout-tntsearch-driver": "^11.5",
        "vimeo/psalm": "^4.8",
        "orchestra/testbench": "^6.18"
    }
}
